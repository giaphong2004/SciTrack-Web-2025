@{
    ViewData["Title"] = "Thiết bị KHCN";
}

<div class="flex-fill p-4">
    <h5 class="fw-bold text-primary mb-1">
        <i class="bi bi-wrench-adjustable-circle me-2"></i>Phần mềm quản lý KH&CN — Quản lý thiết bị
    </h5>
    <h6 class="fw-bold mb-3 text-muted">TTBKHCN - Trang thiết bị </h6>

    <div class="card shadow-sm border-0 rounded-3 mt-3">
        <div class="card-body p-4">
            <div class="row">
                <!-- 🟩 FORM NHẬP LIỆU BÊN TRÁI -->
                <div class="col-lg-7 col-md-6 mb-4 mb-md-0">
                    <h6 class="fw-bold mb-3 text-primary">
                        <i class="bi bi-pencil-square me-2"></i>Thông tin thiết bị
                    </h6>

                    <form>
                        <div class="col-md-12">
                            <label class="form-label fw-semibold">Mã thiết bị</label>
                            <input type="text" class="form-control" placeholder="Mã thiết bị" />
                        </div>
                        <div class="col-md-12">
                            <label class="form-label fw-semibold">Tên thiết bị (ID4.1)</label>
                            <input type="text" class="form-control" placeholder="Tên thiết bị" />
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">Ngày đưa vào sử dụng (ID4.2)</label>
                            <input type="date" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Nguyên giá (ID4.3)</label>
                            <input type="number" class="form-control" placeholder="Nguyên giá" />
                        </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">Khấu hao / hao mòn (ID4.4)</label>
                            <input type="number" class="form-control" placeholder="%" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Giá trị còn lại (ID4.5)</label>
                            <input type="number" class="form-control" placeholder="Giá trị còn lại" />
                        </div>
                        </div>
                        <div class="col-md-12">
                            <label class="form-label fw-semibold">ĐT/HD KH&CN liên quan (ID4.6)</label>
                            <input type="text" class="form-control" placeholder="Đề tài / hợp đồng liên quan" />
                        </div>
                        <div class="col-md-12">
                            <label class="form-label fw-semibold">Nhật ký sử dụng (ID4.7)</label>
                            <textarea class="form-control" rows="3" placeholder="Ghi chú việc sử dụng thiết bị..."></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Tình trạng (ID4.8)</label>
                            <select class="form-select">
                                <option value="">-- Chọn tình trạng --</option>
                                <option value="Đang sử dụng">Đang sử dụng</option>
                                <option value="Bảo dưỡng">Bảo dưỡng</option>
                                <option value="Hư hỏng">Hư hỏng</option>
                            </select>
                        </div>

                        <div class="mt-4 d-flex flex-wrap gap-2">
                            <button type="button" class="btn btn-success">
                                <i class="bi bi-plus-circle me-1"></i>Thêm
                            </button>
                            <button type="button" class="btn btn-warning text-white">
                                <i class="bi bi-pencil-square me-1"></i>Sửa
                            </button>
                            <button type="button" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i>Xóa
                            </button>
                            <button type="button" class="btn btn-secondary">
                                <i class="bi bi-printer me-1"></i>In
                            </button>
                            <button type="reset" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-clockwise me-1"></i>Làm mới
                            </button>
                        </div>
                    </form>
                </div>

                <!-- 🟦 DANH SÁCH BÊN PHẢI -->
                <div class="col-lg-5 col-md-6">
                    <h6 class="fw-bold mb-3 text-primary">
                        <i class="bi bi-list-ul me-2"></i>Danh sách thiết bị KHCN
                    </h6>
                    <div class="table-responsive border rounded" style="max-height: 600px; overflow-y: auto;">
                        <table class="table table-hover table-sm table-bordered align-middle mb-0">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th class="fw-semibold text-center" style="width: 15%;">Mã</th>
                                    <th class="fw-semibold" style="width: 50%;">Tên đề tài</th>
                                    <th class="fw-semibold text-center" style="width: 35%;">Trạng thái</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div class="mt-2">
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>Nhấn vào hàng để xem chi tiết và chỉnh sửa
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
