@model List<SciTrack.web.Models.ThietBi>
@{
    ViewData["Title"] = "Thiết bị KHCN";
    ViewData["Active"] = "ThietBi";
    var selected = ViewBag.Selected as SciTrack.web.Models.ThietBi;
}

<div class="flex-fill p-4">
    <h5 class="fw-bold text-primary mb-1">
        <i class="bi bi-wrench-adjustable-circle me-2"></i>Phần mềm quản lý KH&CN — Quản lý thiết bị
    </h5>
    <h6 class="fw-bold mb-3 text-muted">TTBKHCN - Trang thiết bị KHCN</h6>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="bi bi-info-circle me-2"></i>@TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm border-0 rounded-3 mt-3">
        <div class="card-body p-4">
            <div class="row">
                <!-- 🟩 FORM NHẬP LIỆU BÊN TRÁI -->
                <div class="col-lg-7 col-md-6 mb-4 mb-md-0">
                    <h6 class="fw-bold mb-3 text-primary">
                        <i class="bi bi-pencil-square me-2"></i>Thông tin thiết bị
                    </h6>

                    <form method="post">
                        <input type="hidden" name="Id" value="@(selected?.Id ?? 0)" />

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Mã thiết bị (ID4.0)</label>
                            <input type="text" name="MaThietBi" class="form-control" 
                                   value="@(selected?.MaThietBi ?? "")"
                                   placeholder="Nhập mã thiết bị (VD: TB001)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Tên thiết bị (ID4.1) <span class="text-danger">*</span></label>
                            <input type="text" name="TenThietBi" class="form-control" 
                                   value="@(selected?.TenThietBi ?? "")"
                                   placeholder="Nhập tên thiết bị" required />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Ngày đưa vào sử dụng (ID4.2)</label>
                                <input type="date" name="NgayDuaVaoSuDung" class="form-control"
                                       value="@(selected?.NgayDuaVaoSuDung?.ToString("yyyy-MM-dd") ?? "")" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Nguyên giá (ID4.3)</label>
                                <input type="number" step="0.01" name="NguyenGia" class="form-control" 
                                       value="@(selected?.NguyenGia ?? 0)"
                                       placeholder="0" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Khấu hao / hao mòn (ID4.4)</label>
                                <input type="number" step="0.01" name="KhauHao" class="form-control" 
                                       value="@(selected?.KhauHao ?? 0)"
                                       placeholder="0" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Giá trị còn lại (ID4.5)</label>
                                <input type="number" step="0.01" name="GiaTriConLai" class="form-control" 
                                       value="@(selected?.GiaTriConLai ?? 0)"
                                       placeholder="0" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">ĐT/HD KH&CN liên quan (ID4.6)</label>
                            <input type="text" name="DT_HD_KHCN_LienQuan" class="form-control" 
                                   value="@(selected?.DT_HD_KHCN_LienQuan ?? "")"
                                   placeholder="Đề tài / hợp đồng liên quan" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Nhật ký sử dụng (ID4.7)</label>
                            <textarea name="NhatKySuDung" class="form-control" rows="3" 
                                      placeholder="Ghi chú việc sử dụng thiết bị...">@(selected?.NhatKySuDung ?? "")</textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Tình trạng thiết bị (ID4.8)</label>
                            <select name="TinhTrangThietBi" class="form-select">
                                <option value="">-- Chọn tình trạng --</option>
                                <option value="Đang sử dụng" selected="@(selected?.TinhTrangThietBi == "Đang sử dụng")">Đang sử dụng</option>
                                <option value="Bảo dưỡng" selected="@(selected?.TinhTrangThietBi == "Bảo dưỡng")">Bảo dưỡng</option>
                                <option value="Hư hỏng" selected="@(selected?.TinhTrangThietBi == "Hư hỏng")">Hư hỏng</option>
                                <option value="Thanh lý" selected="@(selected?.TinhTrangThietBi == "Thanh lý")">Thanh lý</option>
                                <option value="Chờ sửa chữa" selected="@(selected?.TinhTrangThietBi == "Chờ sửa chữa")">Chờ sửa chữa</option>
                            </select>
                        </div>

                        @if (selected != null && selected.Id > 0)
                        {
                            <div class="alert alert-info">
                                <small><strong>Đang chỉnh sửa:</strong> Id = @selected.Id, Mã = @selected.MaThietBi</small>
                            </div>
                        }

                        <div class="mt-4 d-flex flex-wrap gap-2">
                            <button type="submit" formaction="/ThietBi/Create" class="btn btn-success">
                                <i class="bi bi-plus-circle me-1"></i>Thêm
                            </button>
                            <button type="submit" formaction="/ThietBi/Update" class="btn btn-warning text-white">
                                <i class="bi bi-pencil-square me-1"></i>Sửa
                            </button>
                            <button type="submit" formaction="/ThietBi/Delete" name="id" value="@(selected?.Id ?? 0)" 
                                    class="btn btn-danger"
                                    onclick="return confirm('Bạn có chắc muốn xóa thiết bị này?');">
                                <i class="bi bi-trash me-1"></i>Xóa
                            </button>
                            <button type="button" class="btn btn-secondary">
                                <i class="bi bi-printer me-1"></i>In
                            </button>
                            <a href="/ThietBi/Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-clockwise me-1"></i>Làm mới
                            </a>
                        </div>
                    </form>
                </div>

                <!-- 🟦 DANH SÁCH BÊN PHẢI -->
                <div class="col-lg-5 col-md-6">
                    <h6 class="fw-bold mb-3 text-primary">
                        <i class="bi bi-list-ul me-2"></i>Danh sách thiết bị KHCN
                    </h6>
                    <div class="table-responsive border rounded" style="max-height: 600px; overflow-y: auto;">
                        <table class="table table-hover table-sm table-bordered align-middle mb-0">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th class="fw-semibold text-center" style="width: 15%;">Mã</th>
                                    <th class="fw-semibold" style="width: 50%;">Tên thiết bị</th>
                                    <th class="fw-semibold text-center" style="width: 35%;">Tình trạng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var tb in Model)
                                    {
                                        <tr class="@(selected?.Id == tb.Id ? "table-active" : "")">
                                            <td class="text-center">
                                                <a asp-controller="ThietBi" asp-action="Index" asp-route-id="@tb.Id"
                                                   class="text-primary fw-bold text-decoration-none">
                                                    @(tb.MaThietBi ?? "N/A")
                                                </a>
                                            </td>
                                            <td>
                                                <a asp-controller="ThietBi" asp-action="Index" asp-route-id="@tb.Id"
                                                   class="text-dark text-decoration-none">
                                                    @tb.TenThietBi
                                                </a>
                                            </td>
                                            <td class="text-center">
                                                <a asp-controller="ThietBi" asp-action="Index" asp-route-id="@tb.Id"
                                                   class="text-decoration-none">
                                                    @{
                                                        var badgeClass = tb.TinhTrangThietBi switch
                                                        {
                                                            "Đang sử dụng" => "bg-success",
                                                            "Bảo dưỡng" => "bg-info",
                                                            "Hư hỏng" => "bg-danger",
                                                            "Thanh lý" => "bg-secondary",
                                                            "Chờ sửa chữa" => "bg-warning",
                                                            _ => "bg-light text-dark"
                                                        };
                                                    }
                                                    <span class="badge @badgeClass">
                                                        @(tb.TinhTrangThietBi ?? "N/A")
                                                    </span>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted py-4">
                                            <i class="bi bi-inbox fs-1"></i>
                                            <p class="mb-0 mt-2">Chưa có dữ liệu thiết bị</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-2">
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>Nhấn vào hàng để xem chi tiết và chỉnh sửa
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
