@model List<SciTrack.web.Models.DeTai>
@{
    ViewData["Title"] = "Đề tài KHCN";
    ViewData["Active"] = "DeTai";
    var selected = ViewBag.Selected as SciTrack.web.Models.DeTai;
}

<div class="flex-fill p-4">
    <h5 class="fw-bold text-primary mb-1">
        <i class="fa-solid fa-flask me-2"></i>Phần mềm quản lý KH&CN — Quản lý Đề tài
    </h5>
    <h6 class="fw-bold mb-3 text-muted">DTKHCN - Đề tài KHCN (chi tiết)</h6>
    
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="bi bi-info-circle me-2"></i>@TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm border-0 rounded-3 mt-3">
        <div class="card-body p-4">
            <div class="row">
                <!-- 🟩 FORM NHẬP LIỆU BÊN TRÁI -->
                <div class="col-lg-7 col-md-6 mb-4 mb-md-0">
                    <h6 class="fw-bold mb-3 text-primary">
                        <i class="bi bi-pencil-square me-2"></i>Thông tin đề tài
                    </h6>
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Mã số đề tài (ID2.1)</label>
                            <input type="text" name="MaDeTai" class="form-control" 
                                   value="@(selected?.MaDeTai ?? "")" 
                                   placeholder="Nhập mã đề tài" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Tên đề tài (ID2.2)</label>
                            <input type="text" name="Ten" class="form-control" 
                                   value="@(selected?.Ten ?? "")" 
                                   placeholder="Nhập tên đề tài" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Ngày cập nhật (ID2.3)</label>
                            <input type="date" name="CapNhatTaiSanLanCuoi" class="form-control"
                                   value="@(selected?.CapNhatTaiSanLanCuoi?.ToString("yyyy-MM-dd") ?? "")" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Các quyết định liên quan (ID2.4)</label>
                            <textarea name="QuyetDinhThamChieu" class="form-control" rows="2" 
                                      placeholder="Nhập các quyết định">@(selected?.QuyetDinhThamChieu ?? "")</textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Quyết định xử lý tài sản (ID2.5)</label>
                            <textarea name="QuyetDinhXuLyTaiSan" class="form-control" rows="2" 
                                      placeholder="Nhập quyết định xử lý">@(selected?.QuyetDinhXuLyTaiSan ?? "")</textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Kinh phí thực hiện (ID2.6)</label>
                                <input type="number" step="0.01" name="KinhPhiThucHien" class="form-control" 
                                       value="@(selected?.KinhPhiThucHien ?? 0)" placeholder="0" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Kinh phí đào tạo (ID2.7)</label>
                                <input type="number" step="0.01" name="KinhPhiDaoTao" class="form-control" 
                                       value="@(selected?.KinhPhiDaoTao ?? 0)" placeholder="0" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Kinh phí tiêu hao (ID2.8)</label>
                                <input type="number" step="0.01" name="KinhPhiTieuHao" class="form-control" 
                                       value="@(selected?.KinhPhiTieuHao ?? 0)" placeholder="0" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Khấu hao thiết bị (ID2.9)</label>
                                <input type="number" step="0.01" name="KhauHaoThietBi" class="form-control" 
                                       value="@(selected?.KhauHaoThietBi ?? 0)" placeholder="0" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Kết quả đề tài (ID2.10)</label>
                            <input type="text" name="KetQuaDeTai" class="form-control" 
                                   value="@(selected?.KetQuaDeTai ?? "")" 
                                   placeholder="Nhập kết quả đề tài" />
                        </div>

                        <!-- 🟣 CÁC NÚT THAO TÁC -->
                        <div class="mt-4 d-flex flex-wrap gap-2">
                            <button type="submit" formaction="/DeTai/Create" class="btn btn-success">
                                <i class="bi bi-plus-circle me-1"></i>Thêm
                            </button>

                            <button type="submit" formaction="/DeTai/Update" class="btn btn-warning text-white">
                                <i class="bi bi-pencil-square me-1"></i>Sửa
                            </button>

                            <button type="submit" formaction="/DeTai/Delete" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i>Xóa
                            </button>

                            <button type="button" class="btn btn-secondary">
                                <i class="bi bi-printer me-1"></i>In
                            </button>

                            <a href="/DeTai/Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-clockwise me-1"></i>Làm mới
                            </a>
                        </div>
                    </form>
                </div>

                <!-- 🟦 DANH SÁCH ĐỀ TÀI BÊN PHẢI -->
                <div class="col-lg-5 col-md-6">
                    <h6 class="fw-bold mb-3 text-primary">
                        <i class="bi bi-list-ul me-2"></i>Danh sách đề tài KHCN
                    </h6>
                    <div class="table-responsive border rounded" style="max-height: 600px; overflow-y: auto;">
                        <table class="table table-hover table-sm table-bordered align-middle mb-0">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th class="fw-semibold text-center" style="width: 15%;">Mã</th>
                                    <th class="fw-semibold" style="width: 50%;">Tên đề tài</th>
                                    <th class="fw-semibold text-center" style="width: 35%;">Kinh phí</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var dt in Model)
                                    {
                                        <tr class="@(selected?.MaDeTai == dt.MaDeTai ? "table-active" : "")">
                                            <td class="text-center">
                                                <a asp-controller="DeTai" asp-action="Index" 
                                                   asp-route-maDeTai="@dt.MaDeTai"
                                                   class="text-primary fw-bold text-decoration-none">
                                                    @dt.MaDeTai
                                                </a>
                                            </td>
                                            <td>
                                                <a asp-controller="DeTai" asp-action="Index" 
                                                   asp-route-maDeTai="@dt.MaDeTai"
                                                   class="text-dark text-decoration-none">
                                                    @dt.Ten
                                                </a>
                                            </td>
                                            <td class="text-center">
                                                <a asp-controller="DeTai" asp-action="Index" 
                                                   asp-route-maDeTai="@dt.MaDeTai"
                                                   class="text-success text-decoration-none ">
                                                    @String.Format("{0:N0}", dt.KinhPhiThucHien) đ
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted py-4">
                                            <i class="bi bi-inbox fs-1"></i>
                                            <p class="mb-0 mt-2">Chưa có dữ liệu đề tài</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-2">
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>Nhấn vào hàng để xem chi tiết và chỉnh sửa
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
