@model List<SciTrack.web.Models.TaiSan>
@{
    ViewData["Title"] = "Tài sản KH&CN";
    ViewData["Active"] = "TaiSan";
    var selected = ViewBag.Selected as SciTrack.web.Models.TaiSan;
}

<div class="flex-fill p-4">
    <h5 class="fw-bold text-primary mb-1">
        <i class="bi bi-box-seam me-2"></i>Phần mềm quản lý KH&CN — Quản lý tài sản
    </h5>
    <h6 class="fw-bold mb-3 text-muted">TSKHCN - Tài sản KH&CN (chi tiết)</h6>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="bi bi-info-circle me-2"></i>@TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm border-0 rounded-3 mt-3">
        <div class="card-body p-4">
            <div class="row">
                <!-- 🟩 FORM NHẬP LIỆU BÊN TRÁI -->
                <div class="col-lg-6 col-md-6 mb-4 mb-md-0">
                    <h6 class="fw-bold mb-3 text-primary">
                        <i class="bi bi-pencil-square me-2"></i>Thông tin tài sản
                    </h6>
                    <form asp-controller="TaiSan" method="post">
                        <input type="hidden" name="Id" value="@(selected?.Id ?? 0)" />

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Số danh mục (ID1.1)</label>
                            <input type="text" name="SoDanhMuc" class="form-control" 
                                   value="@(selected?.SoDanhMuc ?? "")" 
                                   placeholder="Nhập số danh mục" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Tên tài sản (ID1.2)</label>
                            <input type="text" name="Ten" class="form-control" 
                                   value="@(selected?.Ten ?? "")" 
                                   placeholder="Nhập tên tài sản" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Nguyên giá (ID1.3)</label>
                                <input type="number" step="0.01" name="NguyenGia" class="form-control" 
                                       value="@(selected?.NguyenGia ?? 0)" placeholder="0" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Khấu hao (ID1.4)</label>
                                <input type="number" step="0.01" name="KhauHao" class="form-control" 
                                       value="@(selected?.KhauHao ?? 0)" placeholder="0" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Hao mòn (ID1.5)</label>
                                <input type="number" step="0.01" name="HaoMon" class="form-control" 
                                       value="@(selected?.HaoMon ?? 0)" placeholder="0" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Giá trị còn lại (ID1.6)</label>
                                <input type="number" step="0.01" name="GiaTriConLai" class="form-control" 
                                       value="@(selected?.GiaTriConLai ?? 0)" placeholder="0" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Trạng thái (ID1.7)</label>
                            <select name="TrangThaiTaiSan" class="form-select">
                                <option value="">-- Chọn trạng thái --</option>
                                <option value="Sử dụng" selected="@(selected?.TrangThaiTaiSan == "Sử dụng")">Sử dụng</option>
                                <option value="Khai thác" selected="@(selected?.TrangThaiTaiSan == "Khai thác")">Khai thác</option>
                                <option value="Bảo dưỡng" selected="@(selected?.TrangThaiTaiSan == "Bảo dưỡng")">Bảo dưỡng</option>
                                <option value="Hư hỏng" selected="@(selected?.TrangThaiTaiSan == "Hư hỏng")">Hư hỏng</option>
                                <option value="Thanh lý" selected="@(selected?.TrangThaiTaiSan == "Thanh lý")">Thanh lý</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Ngày cập nhật (ID1.8)</label>
                            <input type="date" name="NgayCapNhat" class="form-control"
                                   value="@(selected?.NgayCapNhat?.ToString("yyyy-MM-dd") ?? "")" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Mã đề tài KH&CN (ID1.9)</label>
                            <input type="text" name="MaDeTaiKHCN" class="form-control" 
                                   value="@(selected?.MaDeTaiKHCN ?? "")" 
                                   placeholder="Nhập mã đề tài" />
                        </div>

                        <!-- 🟣 CÁC NÚT THAO TÁC -->
                        <div class="mt-4 d-flex flex-wrap gap-2">
                            <button type="submit" formaction="/TaiSan/Create" class="btn btn-success">
                                <i class="bi bi-plus-circle me-1"></i>Thêm
                            </button>

                            <button type="submit" formaction="/TaiSan/Update" class="btn btn-warning text-white">
                                <i class="bi bi-pencil-square me-1"></i>Sửa
                            </button>

                            <button type="submit" formaction="/TaiSan/Delete" name="id" value="@(selected?.Id ?? 0)"
                                    class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i>Xóa
                            </button>

                            <button type="button" class="btn btn-secondary">
                                <i class="bi bi-printer me-1"></i>In
                            </button>

                            <a href="/TaiSan/Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-clockwise me-1"></i>Làm mới
                            </a>
                        </div>
                    </form>
                </div>

                <!-- 🟦 DANH SÁCH TÀI SẢN BÊN PHẢI -->
                <div class="col-lg-6 col-md-6">
                    <h6 class="fw-bold mb-3 text-primary">
                        <i class="bi bi-list-ul me-2"></i>Danh sách tài sản KH&CN
                    </h6>
                    <div class="table-responsive border rounded" style="max-height: 600px; overflow-y: auto;">
                        <table class="table table-hover table-sm table-bordered align-middle mb-0">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th class="fw-semibold text-center" style="width: 20%;">Mã TS</th>
                                    <th class="fw-semibold" style="width: 50%;">Tên tài sản</th>
                                    <th class="fw-semibold text-center" style="width: 30%;">Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var ts in Model)
                                    {
                                        <tr class="@(selected?.Id == ts.Id ? "table-active" : "")">
                                            <td class="text-center">
                                                <a asp-controller="TaiSan" asp-action="Index" asp-route-id="@ts.Id"
                                                   class="text-primary fw-bold text-decoration-none">
                                                    @ts.SoDanhMuc
                                                </a>
                                            </td>
                                            <td>
                                                <a asp-controller="TaiSan" asp-action="Index" asp-route-id="@ts.Id"
                                                   class="text-dark text-decoration-none">
                                                    @ts.Ten
                                                </a>
                                            </td>
                                            <td class="text-center">
                                                <a asp-controller="TaiSan" asp-action="Index" asp-route-id="@ts.Id"
                                                   class="text-decoration-none">
                                                    @{
                                                        var badgeClass = ts.TrangThaiTaiSan?.ToLower() switch
                                                        {
                                                            "sử dụng" => "bg-success",
                                                            "khai thác" => "bg-info",
                                                            "bảo dưỡng" => "bg-warning",
                                                            "hư hỏng" => "bg-danger",
                                                            "thanh lý" => "bg-secondary",
                                                            _ => "bg-secondary"
                                                        };
                                                    }
                                                    <span class="badge @badgeClass">
                                                        @(ts.TrangThaiTaiSan ?? "N/A")
                                                    </span>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted py-4">
                                            <i class="bi bi-inbox fs-1"></i>
                                            <p class="mb-0 mt-2">Chưa có dữ liệu tài sản</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-2">
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>Nhấn vào hàng để xem chi tiết và chỉnh sửa
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
