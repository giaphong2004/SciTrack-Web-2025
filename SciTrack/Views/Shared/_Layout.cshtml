<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Quản lý KH&CN</title>

    <!-- ✅ Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- ✅ Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />

    <!-- ✅ Font Awesome (để có icon bình thí nghiệm) -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <!-- ✅ CSS riêng -->
    <link href="~/css/sitesidebar.css" rel="stylesheet" />
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column p-3">
        <h5 class="mb-4 fw-bold d-flex align-items-center">
            <i class="bi bi-list me-2"></i> Quản lý KH&CN
        </h5>

        <a asp-controller="TaiSan" asp-action="Index" class="@(ViewData["Active"] == "TaiSan" ? "active" : "")">
            <i class="bi bi-box-seam me-2"></i> <span>Tài sản KH&CN</span>
        </a>

        <a asp-controller="DeTai" asp-action="Index" class="@(ViewData["Active"] == "DeTai" ? "active" : "")">
            <!-- ✅ Icon bình thí nghiệm từ Font Awesome -->
            <i class="fa-solid fa-flask me-2"></i> <span>Đề tài KH&CN</span>
        </a>

        <a asp-controller="KetQua" asp-action="Index" class="@(ViewData["Active"] == "KetQua" ? "active" : "")">
            <i class="bi bi-trophy me-2"></i> <span>Kết quả đề tài</span>
        </a>

        <a asp-controller="TinhTrang" asp-action="Index" class="@(ViewData["Active"] == "TinhTrang" ? "active" : "")">
            <i class="bi bi-wrench-adjustable-circle me-2"></i> <span>Tình trạng thiết bị</span>
        </a>

        <a asp-controller="HopDong" asp-action="Index" class="@(ViewData["Active"] == "HopDong" ? "active" : "")">
            <i class="bi bi-file-earmark-text me-2"></i> <span>Hợp đồng KH&CN</span>
        </a>
    </div>

    <!-- Nội dung chính -->
    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- ✅ Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
