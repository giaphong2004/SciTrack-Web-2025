@model List<SciTrack.web.Models.HopDong>
@{
    ViewData["Title"] = "Quản lý hợp đồng";
    ViewData["Active"] = "HopDong";

    var selected = ViewBag.Selected as SciTrack.web.Models.HopDong;
}

<div class="flex-fill p-4">
    <h5 class="fw-bold text-primary mb-1">
        <i class="bi bi-file-earmark-text me-2"></i>Phần mềm quản lý KH&CN — Quản lý hợp đồng
    </h5>
    <h6 class="fw-bold mb-3 text-muted">HDKHCN - Hợp đồng KHCN (chi tiết)</h6>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="bi bi-info-circle me-2"></i>@TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm border-0 rounded-3 mt-3">
        <div class="card-body p-4">
            <div class="row">

                <!-- 🟩 FORM NHẬP LIỆU -->
                <div class="col-lg-7 col-md-6 mb-4 mb-md-0">
                    <h6 class="fw-bold mb-3 text-primary">
                        <i class="bi bi-pencil-square me-2"></i>Thông tin hợp đồng
                    </h6>

                    <form method="post">
                        <input type="hidden" name="Id" value="@(selected?.Id ?? 0)" />

                        <div class="col-md-12 mb-3">
                            <label class="form-label fw-semibold">Mã hợp đồng</label>
                            <input type="text" name="MaHopDong" class="form-control"
                                   placeholder="Nhập mã hợp đồng"
                                   value="@(selected?.MaHopDong ?? "")" />
                        </div>

                        <div class="col-md-12 mb-3">
                            <label class="form-label fw-semibold">Tên đối tác (ID5.1)</label>
                            <input type="text" name="TenDoiTac" class="form-control"
                                   placeholder="Tên đối tác"
                                   value="@(selected?.TenDoiTac ?? "")" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Ngày hiệu lực (ID5.2)</label>
                                <input type="date" name="NgayHieuLuc" class="form-control"
                                       value="@(selected?.NgayHieuLuc?.ToString("yyyy-MM-dd") ?? "")" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Ngày nghiệm thu (ID5.3)</label>
                                <input type="date" name="NgayNghiemThu" class="form-control"
                                       value="@(selected?.NgayNghiemThu?.ToString("yyyy-MM-dd") ?? "")" />
                            </div>
                        </div>

                        <div class="col-md-12 mb-3">
                            <label class="form-label fw-semibold">Tổng giá trị hợp đồng (ID5.4)</label>
                            <input type="number" step="0.01" name="TongGiaTriHopDong" class="form-control"
                                   placeholder="Nhập tổng giá trị"
                                   value="@(selected?.TongGiaTriHopDong ?? 0)" />
                        </div>

                        <div class="col-md-12 mb-3">
                            <label class="form-label fw-semibold">Chi phí từ kết quả đề tài (ID5.5)</label>
                            <input type="number" step="0.01" name="ChiPhiKetQuaDeTai" class="form-control"
                                   placeholder="Nhập chi phí"
                                   value="@(selected?.ChiPhiKetQuaDeTai ?? 0)" />
                        </div>

                        <div class="col-md-12 mb-3">
                            <label class="form-label fw-semibold">Chi phí từ trang thiết bị (ID5.6)</label>
                            <input type="number" step="0.01" name="ChiPhiTrangThietBi" class="form-control"
                                   placeholder="Nhập chi phí"
                                   value="@(selected?.ChiPhiTrangThietBi ?? 0)" />
                        </div>

                        <div class="col-md-12 mb-3">
                            <label class="form-label fw-semibold">Chi phí hoạt động chuyên môn (ID5.7)</label>
                            <input type="number" step="0.01" name="ChiPhiHoatDongChuyenMon" class="form-control"
                                   placeholder="Nhập chi phí"
                                   value="@(selected?.ChiPhiHoatDongChuyenMon ?? 0)" />
                        </div>

                        <div class="col-md-12 mb-3">
                            <label class="form-label fw-semibold">Lợi nhuận (ID5.8)</label>
                            <input type="number" step="0.01" name="LoiNhuan" class="form-control"
                                   placeholder="Nhập lợi nhuận"
                                   value="@(selected?.LoiNhuan ?? 0)" />
                        </div>

                        @if (selected != null && selected.Id > 0)
                        {
                            <div class="alert alert-info">
                                <strong>Đang chỉnh sửa:</strong> Id = @selected.Id, Mã = @selected.MaHopDong
                            </div>
                        }

                        <div class="mt-4 d-flex flex-wrap gap-2">
                            <button type="submit" formaction="/HopDong/Create" class="btn btn-success">
                                <i class="bi bi-plus-circle me-1"></i>Thêm
                            </button>

                            <button type="submit" formaction="/HopDong/Update" class="btn btn-warning text-white">
                                <i class="bi bi-pencil-square me-1"></i>Sửa
                            </button>

                            <button type="submit" formaction="/HopDong/Delete?id=@(selected?.Id ?? 0)"
                                    class="btn btn-danger"
                                    onclick="return confirm('Bạn có chắc muốn xóa hợp đồng này?');">
                                <i class="bi bi-trash me-1"></i>Xóa
                            </button>
                            <button type="button" class="btn btn-secondary">
                                <i class="bi bi-printer me-1"></i>In
                            </button>
                            <button type="reset" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-clockwise me-1"></i>Làm mới
                            </button>
                        </div>
                    </form>
                </div>

                <!-- 🟦 DANH SÁCH BÊN PHẢI -->
                <div class="col-lg-5 col-md-6">
                    <h6 class="fw-bold mb-3 text-primary">
                        <i class="bi bi-list-ul me-2"></i>Danh sách hợp đồng KHCN
                    </h6>

                    <div class="table-responsive border rounded" style="max-height: 600px; overflow-y: auto;">
                        <table class="table table-hover table-sm table-bordered align-middle mb-0">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th class="fw-semibold text-center" style="width: 20%;">Mã</th>
                                    <th class="fw-semibold" style="width: 50%;">Tên đối tác</th>
                                    <th class="fw-semibold text-center" style="width: 30%;">Giá trị</th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var hd in Model)
                                    {
                                        <tr class="@(selected?.Id == hd.Id ? "table-active" : "")">
                                            <td class="text-center">
                                                <a asp-controller="HopDong" asp-action="Index" asp-route-id="@hd.Id"
                                                   class="text-primary text-decoration-none fw-bold">
                                                    @(hd.MaHopDong ?? "N/A")
                                                </a>
                                            </td>
                                            <td>
                                                <a asp-controller="HopDong" asp-action="Index" asp-route-id="@hd.Id"
                                                   class="text-dark text-decoration-none">
                                                    @hd.TenDoiTac
                                                </a>
                                            </td>
                                            <td class="text-center">
                                                @String.Format("{0:N0}", hd.TongGiaTriHopDong ?? 0)
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted py-4">
                                            <i class="bi bi-inbox fs-1"></i>
                                            <p class="mb-0 mt-2">Chưa có dữ liệu hợp đồng</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-2">
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>Nhấn vào hàng để xem chi tiết hoặc chỉnh sửa.
                        </small>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
