@{
    ViewData["Title"] = "Kết Quả KHCN";
    ViewData["Active"] = "HopDong";
}

<div class="flex-fill p-4">
    <h5 class="fw-bold text-primary mb-1">
        <i class="bi bi-file-earmark-text me-2"></i>Phần mềm quản lý KH&CN — Quản lý kết quả đề tài
    </h5>
    <h6 class="fw-bold mb-3 text-muted">KQDTKHCN - Kết quả đề tài KHCN (chi tiết)</h6>

    <div class="card shadow-sm border-0 rounded-3 mt-3">
        <div class="card-body p-4">
            <div class="row">
                <!-- 🟩 FORM NHẬP LIỆU BÊN TRÁI -->
                <div class="col-lg-7 col-md-6 mb-4 mb-md-0">
                    <h6 class="fw-bold mb-3 text-primary">
                        <i class="bi bi-pencil-square me-2"></i>Thông tin hợp đồng
                    </h6>

                    <form>
                        <div class="col-md-12">
                            <label class="form-label fw-semibold">Mã hợp đồng</label>
                            <input type="text" class="form-control" placeholder="Nhập mã hợp đồng" />
                        </div>
                        <div class="col-md-12">
                            <label class="form-label fw-semibold">Tên đối tác (ID5.1)</label>
                            <input type="text" class="form-control" placeholder="Tên đối tác" />
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">Ngày hiệu lực (ID5.2)</label>
                            <input type="date" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Ngày nghiệm thu (ID5.3)</label>
                            <input type="date" class="form-control" />
                        </div>
                       </div>
                        <div class="col-md-12">
                            <label class="form-label fw-semibold">Tổng giá trị hợp đồng (ID5.4)</label>
                            <input type="number" class="form-control" placeholder="Nhập tổng giá trị hợp đồng" />
                        </div>
                        <div class="col-md-12">
                            <label class="form-label fw-semibold">Chi phí từ tài sản là kết quả đề tài (ID5.5)</label>
                            <input type="number" class="form-control" placeholder="Nhập chi phí" />
                        </div>
                        <div class="col-md-12">
                            <label class="form-label fw-semibold">Chi phí từ trang thiết bị (ID5.6)</label>
                            <input type="number" class="form-control" placeholder="Nhập chi phí từ thiết bị" />
                        </div>
                        <div class="col-md-12">
                            <label class="form-label fw-semibold">Chi phí hoạt động chuyên môn (ID5.7)</label>
                            <input type="number" class="form-control" placeholder="Nhập chi phí hoạt động" />
                        </div>
                        <div class="col-md-12">
                            <label class="form-label fw-semibold">Lợi nhuận (ID5.8)</label>
                            <input type="number" class="form-control" placeholder="Nhập lợi nhuận" />
                        </div>

                        <div class="mt-4 d-flex flex-wrap gap-2">
                            <button type="button" class="btn btn-success">
                                <i class="bi bi-plus-circle me-1"></i>Thêm
                            </button>
                            <button type="button" class="btn btn-warning text-white">
                                <i class="bi bi-pencil-square me-1"></i>Sửa
                            </button>
                            <button type="button" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i>Xóa
                            </button>
                            <button type="button" class="btn btn-secondary">
                                <i class="bi bi-printer me-1"></i>In
                            </button>
                            <button type="reset" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-clockwise me-1"></i>Làm mới
                            </button>
                        </div>
                    </form>
                </div>

                <!-- 🟦 DANH SÁCH BÊN PHẢI -->
                <div class="col-lg-5 col-md-6">
                    <h6 class="fw-bold mb-3 text-primary">
                        <i class="bi bi-list-ul me-2"></i>Danh sách kết quả đề tài KHCN
                    </h6>
                    <div class="table-responsive border rounded" style="max-height: 600px; overflow-y: auto;">
                        <table class="table table-hover table-sm table-bordered align-middle mb-0">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th class="fw-semibold text-center" style="width: 15%;">Mã</th>
                                    <th class="fw-semibold" style="width: 50%;">Tên đề tài</th>
                                    <th class="fw-semibold text-center" style="width: 35%;">Giá trị</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div class="mt-2">
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>Nhấn vào hàng để xem chi tiết và chỉnh sửa
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
